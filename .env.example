# Environment Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///./healthcare_chatbot.db

# External APIs
GOVERNMENT_HEALTH_API_URL=https://api.gov.health.example.com
GOVERNMENT_HEALTH_API_KEY=your-api-key-here

# WhatsApp Business API
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis for caching and background tasks
REDIS_URL=redis://localhost:6379

# Supported Languages
SUPPORTED_LANGUAGES=en,hi,ta,te,bn,gu,mr,ml,kn,pa

# Cloud Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=healthcare-chatbot-data

# Google Cloud (Alternative)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Logging
LOG_LEVEL=INFO

# CORS
ALLOWED_HOSTS=*